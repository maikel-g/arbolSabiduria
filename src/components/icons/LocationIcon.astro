---
interface Props {
  width: string;
  widthStroke: string;
  height: string;
  color: string;
}

const { width, height, color, widthStroke } = Astro.props;
---

<svg
  xmlns="http://www.w3.org/2000/svg"
  width={`${width}`}
  height={`${height}`}
  fill="none"
  viewBox="0 0 25 24"
>
  <path
    stroke={`${color}`}
    stroke-linecap="round"
    stroke-linejoin="round"
    stroke-width="2"
    d="M21.09 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 1 1 18 0Z"></path>
  <path
    stroke={`${color}`}
    stroke-linecap="round"
    stroke-linejoin="round"
    stroke-width={`${widthStroke}`}
    d="M12.09 13a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z"></path>
</svg>
