---
import Layout from "../layouts/Layout.astro";
import HeroImage from "../components/HeroImage.astro";
import SeccionIntro from "../components/SeccionIntro.astro";
import MedicalAttentionWave from "../components/MedicalAttentionWave.astro";
import Services from "../components/Services.astro";
import Quote from "../components/Quote.astro";
import ValuesSection from "../components/ValuesSection.astro";
import ActivitiesWave from "../components/ActivitiesWave.astro";
import IndexMap from "../components/IndexMap.astro";
---

<Layout title="Árbol de Sabiduría">
  <HeroImage />
  <SeccionIntro
    titulo="UN HOGAR DE ATENCIÓN Y BIENESTAR"
    parrafoGrande="Desde hace más de cuatro años, nos hemos dedicado a promover la salud, la independencia y la calidad de vida de todos nuestros residentes."
    parrafoPequeño="En el Hogar Árbol de Sabiduría, nos dedicamos a brindar un cuidado excelente y personalizado para nuestros residentes y sus seres queridos ofreciendo el mejor cuidado posible. "
  />
  <main>
    <MedicalAttentionWave />
    <Services />
    <Quote />
    <ValuesSection />
    <ActivitiesWave />
    <IndexMap />
  </main>
</Layout>
