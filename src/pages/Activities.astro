import SeccionIntro from "../components/Index/SeccionIntro.astro";
import ActivitiesWave from "../components/Activities/ActivitiesWave.astro";
import ActivitiesTab from "../components/Activities/ActivitiesTab.astro";
import HeaderOscuro from "../components/HeaderOscuro.astro";
---

<Layout title="Talleres y Actividades">
  <HeaderOscuro fontColor=`#eee` BgColor="transparent" />
  <ActivitiesWave />
